<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >




    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity = "center_horizontal"
        android:id="@+id/ayudaLayout"
        android:weightSum="1"
        android:layout_centerInParent="true">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ayuda"
            android:id="@+id/ayuda"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:layout_weight="0.65"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity = "center_horizontal"
        android:id="@+id/empezarLayout"
        android:weightSum="1"
        android:layout_above="@id/ayudaLayout"
        android:layout_marginBottom="15dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/empezar"
            android:id="@+id/empezar"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:layout_weight="0.65"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity = "center_horizontal"
        android:id="@+id/salirLayout"
        android:weightSum="1"
        android:layout_below="@id/ayudaLayout"
        android:layout_marginTop="15dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/salir"
            android:id="@+id/salir"
            android:layout_below="@+id/ayuda"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:layout_weight="0.65"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>